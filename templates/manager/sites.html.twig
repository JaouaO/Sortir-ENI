{% extends 'base.html.twig' %}

{% block title %}Gestion des campus{% endblock %}

{% block body %}
    <div class="registration-container">
        <div class="registration-card">
            <h1 class="text-center mb-4">Gestion des campus</h1>

            <form method="get" action="{{ path('manager_sites') }}" class="mb-4">
                <div class="mb-3">
                    <label for="search">Trouver un campus</label>
                    <input type="text" id="search" name="search" class="form-control" placeholder="Entrez le nom du campus" value="{{ app.request.query.get('search') }}">
                </div>
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </form>

            <a href="{{ path('manager_create_site') }}" class="btn btn-primary mb-4">Ajouter un campus</a>

            {% for site in sites %}
                <div class="card mb-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">{{ site.name }}</h5>
                        <div class="d-flex gap-2">
                            <a href="{{ path('manager_update_site', {id: site.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            <a href="{{ path('manager_delete_site', {id: site.id}) }}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Etes vous sûr de vouloir supprimer ce campus ?')">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted">Aucun campus trouvé.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
