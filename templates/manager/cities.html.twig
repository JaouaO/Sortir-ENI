{% extends 'base.html.twig' %}

{% block title %}Gestion des villes{% endblock %}

{% block body %}
    <div class="registration-container">
        <div class="registration-card">
            <h1 class="text-center mb-4">Gestion des villes</h1>

            <form method="get" action="{{ path('manager_cities') }}" class="mb-4">
                <div class="mb-3">
                    <label for="search">Trouver une ville</label>
                    <input type="text" id="search" name="search" class="form-control" placeholder="Entrez le nom de la ville" value="{{ app.request.query.get('search') }}">
                </div>
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </form>

            <a href="{{ path('manager_create') }}" class="btn btn-primary mb-4">Ajouter une ville</a>

            {% for city in cities %}
                <div class="card mb-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">{{ city.name }}</h5>
                            <p class="mb-0">Code postal : {{ city.postCode }}</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="{{ path('manager_update', {id: city.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            <a href="{{ path('manager_delete', {id: city.id}) }}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Etes vous sûr de vouloir supprimer cette ville ?')">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted">Aucune ville trouvée.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
