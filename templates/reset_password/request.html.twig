{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-card">
            <h1>Réinitialiser votre mot de passe</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div style="color:#dc3545; margin-bottom:1rem;">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(requestForm) }}
            <div>
                {{ form_row(requestForm.email) }}
                <small style="display:block; margin-bottom:1rem; color:#555;">
                    Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button type="submit" class="btn-edit">Envoyer un e-mail de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
