{% extends '/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-card">
            <h1>Se connecter</h1>

            {% if error %}
                <div style="color:#dc3545; margin-bottom:1rem;">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div style="margin-bottom:1rem;">
                    Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('user_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <form method="post">
                <div>
                    <label for="username">Email</label>
                    <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
                </div>

                <div>
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-check" style="margin:1rem 0;">
                    <input type="checkbox" id="_remember_me" name="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>

                <button type="submit" class="btn-edit">Se connecter</button>
            </form>

            <div style="margin-top:1rem; text-align:center;">
                <a href="{{ path('app_forgot_password_request') }}" class="btn-edit" style="background-color:#dc3545;">J'ai oublié mon mot de passe</a>
            </div>
        </div>
    </div>
{% endblock %}
