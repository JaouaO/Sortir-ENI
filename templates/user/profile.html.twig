{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-card">
            <h1>Profil de {{ user.pseudo }}</h1>

            <p><strong>Prénom :</strong> {{ user.firstName }}</p>
            <p><strong>Nom :</strong> {{ user.name }}</p>
            <p><strong>Téléphone :</strong> {{ user.phone }}</p>
            <p><strong>Email :</strong> {{ user.email }}</p>
            <p><strong>Ville de rattachement :</strong> {{ user.site }}</p>

            {% if user.poster %}
                <div class="profile-image">
                    <img src="{{ asset('uploads/profile/' ~ user.poster) }}"
                         alt="Photo de {{ user.pseudo }}">
                </div>
            {% endif %}

            {% if is_granted('ROLE_ADMINISTRATEUR') or (app.user and app.user.id == user.id)%}
                <a href="{{ path('user_edit',  { id: user.id })}}" class="btn-edit">Modifier</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
