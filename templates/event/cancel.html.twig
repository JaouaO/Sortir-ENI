{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie{% endblock %}

{% block body %}
    <div class="cancel-container">
        <div class="cancel-card">

            <h1>Annuler une sortie</h1>

            <div class="alert alert-danger" role="alert">
                Attention : cette action est définitive
            </div>

            <div class="cancel-info">
                <dl>
                    <dt>Nom de la sortie :</dt>
                    <dd>{{ event.name }}</dd>

                    <dt>Date et heure de début :</dt>
                    <dd>{{ event.startDateTime|date('d/m/Y H:i') }}</dd>

                    <dt>Date et heure de fin :</dt>
                    <dd>{{ event.endDateTime|date('d/m/Y H:i') }}</dd>

                    <dt>Ville organisatrice :</dt>
                    <dd>{{ event.place.city.name }}</dd>

                    <dt>Lieu :</dt>
                    <dd>{{ event.site.name }}</dd>
                </dl>
            </div>

            {{ form_start(form) }}
            <div class="cancel-reason">
                {{ form_row(form.cancelReason, {'label': 'Motif de l\'annulation :'}) }}
            </div>
            <div class="cancel-buttons">
                <button type="submit" class="btn btn-danger">Annuler la sortie</button>
                <a href="{{ path('home') }}" class="btn btn-secondary">Retour</a>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
