{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
        <h1 class="mb-4">
            {{ group.id ? 'Modifier le groupe ' ~ group.name : "Créer un groupe" }}
        </h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.Users, {'attr': {'class': 'form-select'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">
            {{ group.id ? "Modifier" : "Créer" }}
        </button>

        {{ form_end(form) }}
    </div>

{% endblock %}
