{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Détail du groupe {{ group.name }}
{% endblock %}

{% block body %}

    <h1>{{ group.name }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
            <tr>
                <th scope="col">Avatar</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in group.users %}
                <tr>
                    <td>
                          <img class="rounded-circle"
                             style="width: 40px; height: 40px; object-fit: cover;"
                             src="{{ user.poster ? asset('uploads/' ~ user.poster ) : asset('images/default-user.png') }}"
                             alt="Photo de profil de {{ user.name }}">
                    </td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                         <a href="{{ path('user_profile', {id: user.id}) }}" class="btn btn-sm btn-outline-primary">
                            Afficher le profil
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun utilisateur dans ce groupe.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
